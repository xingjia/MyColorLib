{
  "manifest_version": 2,

  "name": "My Color Lib",
  "description": "This extension gets you the color code of anything in your browser.",
  "version": "1.0",

  "permissions": [
	"tabs",
	"background",
  "storage",
	"http://*/*",
  "https://*/*",
	"file:///*/*"
  ],
	
  "background":{
	"page":"background/background.html",
	"persistent":false
  },
	
  "browser_action": {
  "default_icon": "icon.png",
	"default_title":"My Color Lib",
	"default_popup":"popup/popup.html"
  },
	
  "content_scripts": [
    {
      "matches" : [ 
         "file:///*/*",
		      "*://*/*"
      ],
      "js" : ["content/content.js"],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ]
}